<% @page_title="#{@subject.name} Info" %>

<%= render(:partial=>'shared/back')%>
<div class="subjects show">

	<h2>Show Subjects</h2>

	<table summary="Subject detail view">
		<tr>
			<th>Name</th>
			<td><%= @subject.name %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @subject.position %></td>
		</tr>
		<tr>
			<th>Visible</th>
			<td><%= @subject.visible ? 'True' : 'False' %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @subject.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @subject.updated_at %></td>
		</tr>
	</table>
	<!-- Outputting some javascript -->
	<%= link_to('Click Me', '#', :onclick=>"output_name('#{j(@subject.name)}')") %>
</div>