<% @page_title="Sections" %>

<%= link_to("<< Back to Pages", {:controller=>'pages', :action=>'index', :subject_id => @page.subject_id}, :class=>'back-list') %>

<div class="sections index">
	<h2>Sections</h2>
	<%= link_to( image_tag('plus_sign.png', :size=>'10x10', :alt => 'logo') + " Add New Section", {:action => 'new', :page_id=>@page.id}, :class => 'action new') %>
	<div>

		<%= pluralize(@sections.size, 'section') %>

	</div>
	<table class="listing" summary="Section List">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Page ID</th>
			<th>Section</th>
			<th>Visible</th>
			<th>Content Type</th>
			<th>Content</th>
			<th>Actions</th>
		</tr>
	
		<% @sections.each do |section| %>

		<tr class="<%= cycle('odd','even') %>">
			<td><%= section.position %> </td>
			<td><%= section.page_id %></td>
			<td><%= section.name %></td>
			<td class="center"><%= status_tag(section.visible) %></td>
			<td><%= section.content_type %></td>
			<td><%= section.content %></td>
			<td class="actions">
				<%= link_to("Show", {:action=>'show', :id => section.id, :page_id=>@page.id}, :class=> 'action show')%>
				<%= link_to("Edit", {:action=>'edit', :id=>section.id, :page_id=>@page.id}, :class=> 'action edit') %>
				<%= link_to("Delete", {:action=>"delete", :id=>section.id,:page_id=>@page.id}, :class => 'action delete') %>
			</td>
		<tr>
		<% end %>
	</table>
</div>