<% evil_string = "<script>alert('Gotcha'); </script> ".html_safe %>
<% good_string = "<strong>Welcome to my page</strong>".html_safe %>
<% link_string = "<a href='google.com'> To Google </a>" %>
<!-- Considers the string to be safe one time. -->
<%# raw(evil_string) %>
<br>
<%# raw(good_string) %>
<br>

<%= evil_string.html_safe? %>
<br>
<%= good_string.html_safe? %>

<%= evil_string %>
<%= good_string %>

<br>

<!-- strip_links, strip_tags -->

<%= strip_tags(good_string) %>
<br>
<!-- strip_links -->

<%= strip_links(link_string) %>
<br>
<!-- sanitize(): removes all JS. Remove HTML through options -->
<%= sanitize(evil_string) %>

<% simple_string ='<strong>Please </strong> visit <a href="#"> us </a>' %>

<!-- removes all JS -->
<%= sanitize(simple_string) %>
<!-- removes all HTML and JS-->
<br>
<!-- doesn't allow any tags through-->
<%= sanitize(simple_string, :tags=>[]) %>
<br>
<!-- Allows the 'strong' and 'a' tags through -->
<%= sanitize(simple_string, :tags=>['strong','a' ]) %>