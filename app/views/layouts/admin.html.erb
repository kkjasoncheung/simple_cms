<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS | <%= @page_title || "Admin" %> </title>

    <!-- Uses the asset pipeline CSS manifest file with the RAILS helper-->
    <%= stylesheet_link_tag('application') %>
    <!-- Using the JS helper to insert a js manifest file-->
    <%= javascript_include_tag('public') %>
  </head>

  <body>
  	<div id="header">
  		<h1>Simple CMS Admin</h1>
  	</div>

  	<div id="main">
  		<% if !flash[:notice].blank? %>
			<div class="notice">
				<%= flash[:notice] %>
			</div>
		<% end %>

  		<div id="content">

        <%# link_to('Subjects', {:controller=>'subjects', :action=>'index'}, :class =>'nav_items') %>
  	  	<%# link_to('Sections', {:controller=>'sections', :action=>'index'}, :class=>'nav_items') %>
        <%# link_to('Pages', {:controller=>'pages' , :action=>'index'}, :class=>'nav_items') %>
        <br>
        <br>

        <!-- before yield -->
  	    
  	    <%= yield %>

  	    <!-- after yield -->

    	</div>
  	</div>
  	<div id="footer">
  		<p id="copyright">&copy; lynda.com / Jason Cheung</p>
  	</div>
  </body>
</html>
